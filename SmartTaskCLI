import json
import os

TASKS_FILE = "tasks.json"


def load_tasks():
    if not os.path.exists(TASKS_FILE):
        return []
    with open(TASKS_FILE, "r") as file:
        return json.load(file)


def save_tasks(tasks):
    with open(TASKS_FILE, "w") as file:
        json.dump(tasks, file, indent=4)


def add_task(task):
    tasks = load_tasks()
    tasks.append(task)
    save_tasks(tasks)
    print("‚úÖ Task added successfully!")


def list_tasks():
    tasks = load_tasks()
    if not tasks:
        print("No tasks found.")
        return
    for i, task in enumerate(tasks, start=1):
        print(f"{i}. {task}")


def delete_task(index):
    tasks = load_tasks()
    try:
        removed = tasks.pop(index - 1)
        save_tasks(tasks)
        print(f"üóëÔ∏è Task '{removed}' deleted.")
    except IndexError:
        print("‚ùå Invalid task number.")
    with open(TASKS_FILE, "w") as file:


def main():
    print("SmartTaskCLI")
    print("1. Add Task")
    print("2. List Tasks")
    print("3. List Tasks")
    print("4. Delete Task")

    choice = input("Choose an option: ")

    if choice == "1":
        task = input("Enter task description: ")
        add_task(task)
    elif choice == "2":
        list_tasks()
    elif choice == "3":
        list
SmartTaskCLI is a lightweight Python command-line application for managing daily tasks.
It supports adding, listing, and deleting tasks with persistent storage using JSON.
